<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/employee_background"

    android:paddingBottom="13dp">

    <TextView
        android:id="@+id/evnId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="13dp"
        android:text="Event ID"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/evnName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/evnId"
        android:layout_alignStart="@+id/evnId"
        android:layout_below="@+id/evnId"
        android:text="Event Name" />

    <TextView
        android:id="@+id/evnLeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/evnStart"
        android:layout_alignRight="@+id/evnStart"
        android:layout_alignTop="@+id/evnId"
        android:text="Event Leader"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/evnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/evnLeader"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:text="Start Date" />

    <TextView
        android:id="@+id/evnEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/evnName"
        android:layout_alignStart="@+id/evnName"
        android:layout_below="@+id/evnName"
        android:text="End Date" />

    <TextView
        android:id="@+id/evnType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/evnStart"
        android:layout_alignRight="@+id/evnStart"
        android:layout_below="@+id/evnName"
        android:text="Event Type" />

</RelativeLayout>